<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <FrameLayout
        android:layout_width="@dimen/com_auth0_lock_widget_height"
        android:layout_height="@dimen/com_auth0_lock_widget_height"
        android:layout_margin="@dimen/com_auth0_lock_input_field_stroke_width"
        android:background="@color/com_auth0_lock_input_field_border_normal">

        <ImageView
            android:id="@+id/com_auth0_lock_icon"
            style="@style/Lock.Theme.Widget.Icon"
            app:srcCompat="@drawable/com_auth0_lock_ic_world"
            tools:ignore="MissingPrefix" />
    </FrameLayout>

    <TextView
        android:id="@+id/com_auth0_lock_country_name"
        style="@style/Lock.Theme.Widget.CountryCodeSelector.CountryName"
        android:layout_width="0dp"
        android:layout_marginTop="@dimen/com_auth0_lock_input_field_stroke_width"
        android:layout_weight="1"
        tools:text="Antigua and Barbuda and United States" />

    <TextView
        android:id="@+id/com_auth0_lock_country_code"
        style="@style/Lock.Theme.Widget.CountryCodeSelector.CountryCode"
        android:layout_width="wrap_content"
        android:layout_marginTop="@dimen/com_auth0_lock_input_field_stroke_width"
        tools:text="+1234" />

    <FrameLayout
        android:layout_width="@dimen/com_auth0_lock_widget_height"
        android:layout_height="@dimen/com_auth0_lock_widget_height"
        android:layout_marginRight="@dimen/com_auth0_lock_input_field_stroke_width"
        android:layout_marginTop="@dimen/com_auth0_lock_input_field_stroke_width"
        android:background="@color/com_auth0_lock_input_country_code_background">

        <ImageView
            android:id="@+id/com_auth0_lock_chevron"
            style="@style/Lock.Theme.Widget.Icon"
            app:srcCompat="@drawable/com_auth0_lock_ic_chevron"
            tools:ignore="MissingPrefix" />
    </FrameLayout>
</LinearLayout>