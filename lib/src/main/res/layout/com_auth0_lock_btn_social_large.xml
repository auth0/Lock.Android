<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/com_auth0_lock_container"
    style="@style/Lock.Theme.Widget.SocialButton">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/com_auth0_lock_input_field_stroke_width"
        android:orientation="horizontal"
        tools:ignore="UseCompoundDrawables">

        <ImageView
            android:id="@+id/com_auth0_lock_icon"
            style="@style/Lock.Theme.Widget.Icon.Social"
            tools:background="#FF3333"
            tools:src="@drawable/com_auth0_lock_ic_social_auth0" />

        <TextView
            android:id="@+id/com_auth0_lock_text"
            style="@style/Lock.Theme.Text.SocialButton"
            tools:background="#FF3333"
            tools:text="Sign in with App"
            tools:ignore="SelectableText" />

    </LinearLayout>

</RelativeLayout>