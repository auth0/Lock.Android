<resources>
    <declare-styleable name="Lock.Theme">
        <attr name="Auth0.HeaderLogo" format="reference" />
        <attr name="Auth0.HeaderTitle" format="string|reference" />
        <attr name="Auth0.HeaderBackground" format="color|reference" />
        <attr name="Auth0.HeaderTitleColor" format="color|reference" />
        <attr name="Auth0.PrimaryColor" format="color|reference" />
        <attr name="Auth0.DarkPrimaryColor" format="color|reference" />
        <attr name="Auth0.DefaultSocialStyle" format="reference" />
    </declare-styleable>

    <declare-styleable name="Lock.ValidatedInput">
        <attr name="Auth0.InputDataType" format="enum">
            <enum name="username" value="0" />
            <enum name="email" value="1" />
            <enum name="username_or_email" value="2" />
            <enum name="number" value="3" />
            <enum name="phone_number" value="4" />
            <enum name="password" value="5" />
        </attr>
    </declare-styleable>

    <declare-styleable name="Lock.SocialConfig">
        <attr name="Auth0.BackgroundColor" format="color|reference" />
        <attr name="Auth0.Name" format="string|reference" />
        <attr name="Auth0.Logo" format="reference" />
    </declare-styleable>

    <declare-styleable name="PasswordStrengthView">
        <attr name="Auth0.SuccessTextColor" format="color|reference" />
        <attr name="Auth0.NormalTextColor" format="color|reference" />
        <attr name="Auth0.ErrorTextColor" format="color|reference" />
    </declare-styleable>
</resources>
