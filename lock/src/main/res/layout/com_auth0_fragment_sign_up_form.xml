<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             tools:context="com.auth0.lock.fragment.SignUpFormFragment">

    <LinearLayout
        android:id="@+id/com_auth0_db_signup_credentials"
        android:orientation="vertical"
        style="?attr/Auth0.CredentialBox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true">
        <com.auth0.lock.widget.CredentialField
            android:id="@+id/com_auth0_db_signup_username_field"
            style="?attr/Auth0.CredentialField.Username"
            android:inputType="textEmailAddress"
            android:hint="@string/com_auth0_username_placeholder"
            android:nextFocusDown="@+id/com_auth0_db_signup_email_field"
            />
        <View
            android:id="@+id/com_auth0_db_signup_username_separator"
            android:layout_width="match_parent"
            android:layout_height="@dimen/com_auth0_credential_box_border_width"
            android:background="?attr/Auth0.Separator.Color"/>
        <com.auth0.lock.widget.CredentialField
            android:id="@+id/com_auth0_db_signup_email_field"
            style="?attr/Auth0.CredentialField.Email"
            android:inputType="textEmailAddress"
            android:hint="@string/com_auth0_email_placeholder"
            android:nextFocusDown="@+id/com_auth0_db_signup_password_field"
            />
        <View
            android:id="@+id/com_auth0_db_signup_email_separator"
            android:layout_width="match_parent"
            android:layout_height="@dimen/com_auth0_credential_box_border_width"
            android:background="?attr/Auth0.Separator.Color"/>
        <com.auth0.lock.widget.CredentialField
            android:id="@+id/com_auth0_db_signup_password_field"
            style="?attr/Auth0.CredentialField.Password"
            android:inputType="textPassword"
            android:hint="@string/com_auth0_password_placeholder"
            />
    </LinearLayout>

    <Button
        android:id="@+id/com_auth0_db_access_button"
        android:tag="db_access_button"
        style="?attr/Auth0.PrimaryButtonStyle"
        android:layout_below="@id/com_auth0_db_signup_credentials"
        android:layout_marginTop="@dimen/com_auth0_lock_vertical_margin"
        android:text="@string/com_auth0_db_signup_btn_text"
        android:fontFamily="sans-serif-medium"/>

    <ProgressBar
        android:id="@+id/com_auth0_db_signup_progress_indicator"
        android:visibility="gone"
        android:layout_width="@dimen/com_auth0_primary_button_progress_size"
        android:layout_height="@dimen/com_auth0_primary_button_progress_size"
        android:layout_alignTop="@id/com_auth0_db_access_button"
        android:layout_alignBottom="@id/com_auth0_db_access_button"
        android:layout_centerHorizontal="true"/>

</RelativeLayout>
