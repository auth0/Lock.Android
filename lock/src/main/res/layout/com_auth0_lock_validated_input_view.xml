<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/com_auth0_lock_icon"
        android:layout_width="@dimen/com_auth0_lock_input_icon_width"
        android:layout_height="@dimen/com_auth0_lock_input_icon_width"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:background="@color/com_auth0_lock_input_icon_background"
        android:scaleType="center"
        android:src="@drawable/com_auth0_lock_social_icon_auth0" />

    <android.support.design.widget.TextInputLayout
        android:layout_width="wrap_content"
        android:layout_height="@dimen/com_auth0_lock_input_icon_width"
        android:layout_toRightOf="@id/com_auth0_lock_icon">

        <EditText
            android:id="@+id/com_auth0_lock_input"
            android:layout_width="@dimen/com_auth0_lock_input_field_width"
            android:layout_height="wrap_content" />
    </android.support.design.widget.TextInputLayout>

</RelativeLayout>