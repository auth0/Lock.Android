<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.auth0.android.lock.views.HeaderView
        android:id="@+id/com_auth0_lock_header"
        style="@style/Lock.Theme"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true" />

    <TextView
        android:id="@+id/com_auth0_lock_result_message"
        android:layout_width="match_parent"
        android:layout_height="@dimen/com_auth0_lock_result_message_height"
        android:layout_alignParentTop="true"
        android:background="@color/com_auth0_lock_result_message_error_background"
        android:gravity="center"
        android:paddingBottom="@dimen/com_auth0_lock_widget_small_margin"
        android:paddingTop="@dimen/com_auth0_lock_widget_small_margin"
        android:textColor="@color/com_auth0_lock_error_message"
        android:textSize="17sp"
        android:visibility="gone"
        tools:text="There was an error"
        tools:visibility="visible" />

    <RelativeLayout
        android:id="@+id/com_auth0_lock_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/com_auth0_lock_header" />

    <LinearLayout
        android:id="@+id/com_auth0_lock_link_sent_cover"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:background="@android:color/white"
        android:clickable="true"
        android:gravity="center"
        android:orientation="vertical"
        android:visibility="gone"
        tools:visibility="visible">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="31dp"
            android:src="@drawable/com_auth0_lock_passwordless_link_sent" />

        <TextView
            android:id="@+id/com_auth0_lock_passwordless_message"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:gravity="center_horizontal"
            android:lineSpacingExtra="@dimen/com_auth0_lock_title_text_spacing"
            android:text="@string/com_auth0_lock_title_passwordless_link_sent"
            android:textColor="@color/com_auth0_lock_passwordless_link_sent_text"
            android:textSize="@dimen/com_auth0_lock_title_text" />

    </LinearLayout>
</RelativeLayout>