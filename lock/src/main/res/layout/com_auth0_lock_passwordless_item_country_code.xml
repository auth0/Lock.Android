<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/com_auth0_lock_passwordless_sms_country_name_text_view"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/com_auth0_lock_widget_height"
        android:layout_marginRight="@dimen/com_auth0_lock_widget_horizontal_margin_small"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/com_auth0_lock_widget_horizontal_margin_small"
        android:textColor="@color/com_auth0_lock_normal_text"
        android:textSize="@dimen/com_auth0_lock_normal_text" />

    <TextView
        android:id="@+id/com_auth0_lock_passwordless_sms_country_code_text_view"
        style="@android:style/TextAppearance.DeviceDefault.Medium"
        android:layout_width="0dp"
        android:layout_height="@dimen/com_auth0_lock_widget_height"
        android:layout_weight="1"
        android:gravity="center_vertical|left"
        android:textColor="@color/com_auth0_lock_normal_text"
        android:textSize="@dimen/com_auth0_lock_normal_text" />
</LinearLayout>