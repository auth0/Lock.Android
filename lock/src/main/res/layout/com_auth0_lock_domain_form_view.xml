<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:id="@+id/com_auth0_lock_sso_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="@string/com_auth0_lock_single_sign_on_enabled"
        android:visibility="gone"
        tools:visibility="visible" />

    <com.auth0.android.lock.views.ValidatedUsernameInputView
        android:id="@+id/com_auth0_lock_input_username_email"
        style="@style/Lock.Theme.Input"
        app:Auth0.InputDataType="username_or_email" />

    <com.auth0.android.lock.views.ValidatedUsernameInputView
        android:id="@+id/com_auth0_lock_input_username"
        style="@style/Lock.Theme.Input"
        android:visibility="gone"
        app:Auth0.InputDataType="username" />

    <com.auth0.android.lock.views.ValidatedInputView
        android:id="@+id/com_auth0_lock_input_password"
        style="@style/Lock.Theme.Input"
        android:visibility="gone"
        app:Auth0.InputDataType="password" />

    <TextView
        android:id="@+id/com_auth0_lock_change_password_btn"
        style="@style/com_auth0_lock_forgot_password_text" />

    <com.auth0.android.lock.views.ActionButton
        android:id="@+id/com_auth0_lock_action_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/com_auth0_lock_widget_vertical_margin_large" />

</LinearLayout>