<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
    >
    <TextView
        android:id="@+id/com_auth0_social_icon_label"
        android:layout_width="@dimen/com_auth0_social_button_icon_label_size"
        android:layout_height="@dimen/com_auth0_social_button_icon_label_size"
        android:gravity="center"
        android:background="@drawable/com_auth0_social_icon_background"
        android:textSize="@dimen/com_auth0_social_button_icon_size"
        />
    <TextView
        android:id="@+id/com_auth0_social_title_label"
        android:layout_width="match_parent"
        android:layout_height="@dimen/com_auth0_social_button_icon_label_size"
        android:layout_toEndOf="@id/com_auth0_social_icon_label"
        android:layout_toRightOf="@id/com_auth0_social_icon_label"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/com_auth0_social_button_text_padding_left"
        android:background="@drawable/com_auth0_social_text_background"
        android:textSize="@dimen/com_auth0_social_button_text_size"
        />
</RelativeLayout>