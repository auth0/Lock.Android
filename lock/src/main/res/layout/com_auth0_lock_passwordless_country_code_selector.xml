<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="@dimen/com_auth0_lock_max_widget_width"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/com_auth0_lock_widget_small_margin"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/com_auth0_lock_icon"
        android:layout_width="@dimen/com_auth0_lock_widget_height"
        android:layout_height="@dimen/com_auth0_lock_widget_height"
        android:layout_margin="@dimen/com_auth0_lock_input_field_stroke_width"
        android:background="@color/com_auth0_lock_input_field_border_normal"
        android:scaleType="center"
        android:src="@drawable/com_auth0_lock_ic_input_email" />

    <TextView
        android:id="@+id/com_auth0_lock_text"
        android:layout_width="0dp"
        android:layout_height="@dimen/com_auth0_lock_widget_height"
        android:layout_marginLeft="-3dp"
        android:layout_marginRight="@dimen/com_auth0_lock_input_field_stroke_width"
        android:layout_marginTop="@dimen/com_auth0_lock_input_field_stroke_width"
        android:layout_weight="1"
        android:background="@color/com_auth0_lock_input_country_code_background"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/com_auth0_lock_widget_with_text_horizontal_padding"
        android:paddingRight="@dimen/com_auth0_lock_widget_with_text_horizontal_padding"
        android:textSize="14sp"
        tools:text="+1 United States" />
</LinearLayout>