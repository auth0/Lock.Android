<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             tools:context="com.auth0.lock.fragment.SmallSocialListFragment">

    <GridView
        android:id="@+id/social_grid_view"
        style="?attr/Auth0.GridView.Small"
        android:numColumns="5"
        android:background="@android:color/transparent"
        android:layout_gravity="center_horizontal"
        android:layout_above="@+id/social_separator"
        tools:listitem="@layout/item_social_small"
        android:listSelector="@android:color/transparent"
        >
    </GridView>

</FrameLayout>
